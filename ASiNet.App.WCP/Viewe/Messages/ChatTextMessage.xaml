<?xml version="1.0" encoding="utf-8" ?>
<Border xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:vm="clr-namespace:ASiNet.App.WCP.VieweModels"
        x:DataType="{x:Type vm:ChatMessageVieweModel}" Margin="5,0,5,5" Padding="5" BackgroundColor="{StaticResource WCPForeground1Color}"
        StrokeShape="{StaticResource UIElementsStrokeShape}"
        SendClipboardNotifyCommand="{Binding ClipboardNotificationCommand}"
        x:Class="ASiNet.App.WCP.Viewe.Messages.ChatTextMessage">
    <Border.GestureRecognizers>
        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
    </Border.GestureRecognizers>
    <Border.StrokeShape>
        <RoundRectangle CornerRadius="8,8,8,0"/>
    </Border.StrokeShape>
    <Grid RowDefinitions="*,15" RowSpacing="3" MinimumWidthRequest="50">
        <Label Text="{Binding Text}" Grid.ColumnSpan="2" HorizontalOptions="End"/>
        <Label Grid.Column="1" Grid.Row="1" Text="{Binding Date, StringFormat='{0:T}'}" FontSize="10" HorizontalOptions="End"/>
    </Grid>
</Border>
