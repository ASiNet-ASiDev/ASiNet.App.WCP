<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ASiNet.App.WCP.VieweModels"
             x:DataType="{x:Type vm:MacrosesVieweModel}"
             x:Class="ASiNet.App.WCP.Viewe.MacrosesPage">
    <ContentPage.BindingContext>
        <vm:MacrosesVieweModel/>
    </ContentPage.BindingContext>
    <ScrollView Grid.Row="4" 
                Grid.ColumnSpan="3" 
                HorizontalOptions="Center" 
                VerticalOptions="Start"
                Orientation="Vertical">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <CollectionView SelectionMode="None">

            </CollectionView>
            <Button Text="Create new"
                    Grid.Row="1"
                    HorizontalOptions="Center"
                    Command="{Binding CreateNewMacrosCommand}"/>
        </Grid>
    </ScrollView>
</ContentPage>