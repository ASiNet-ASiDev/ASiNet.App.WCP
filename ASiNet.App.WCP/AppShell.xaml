<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ASiNet.App.WCP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ASiNet.App.WCP.Viewe"
    xmlns:str="clr-namespace:ASiNet.App.WCP.Resources.Localization"
    xmlns:vm="clr-namespace:ASiNet.App.WCP.VieweModels"
    Shell.NavBarIsVisible="True"
    Shell.FlyoutBehavior="Disabled"
    x:DataType="vm:ShellVieweModel">

    <TabBar>
        <Tab Title="{x:Static str:AppResources.shell_connection_title}"
             Icon="connection.png">
            <ShellContent ContentTemplate="{DataTemplate local:ConnectionPage}" Route="root"/>
        </Tab>
        <Tab Title="{x:Static str:AppResources.shell_chat_label}"
             Icon="chat.png">
            <ShellContent ContentTemplate="{DataTemplate local:ChatPage}" Route="chat"/>
        </Tab>
        <Tab Title="{x:Static str:AppResources.shell_tools_label}"
             Icon="tools.png">
            <ShellContent ContentTemplate="{DataTemplate local:ToolsPage}" Route="tools"/>
        </Tab>
        <Tab Title="{x:Static str:AppResources.shell_settings_title}"
             Icon="settings.png">
            <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" Route="settings"/>
        </Tab>
    </TabBar>

</Shell>
