	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Viewe\Controls\KeysSrc.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="Viewe\Controls\Key.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
